@model MyWebApp.Models.RegisterModel

@{
    ViewData["Title"] = "Üye Ol";
    Layout = "/Views/Shared/Layout.cshtml";
}

<div class="container mt-5">
    <h2>Kayıt Ol</h2>
    <form asp-action="Register" method="post">
        <div class="form-group">
            <label>İsim</label>
            <input asp-for="Isim" class="form-control" />
        </div>
        <div class="form-group">
            <label>Soyisim</label>
            <input asp-for="Soyisim" class="form-control" />
        </div>
        <div class="form-group">
            <label>Eposta</label>
            <input asp-for="Eposta" class="form-control" type="email" />
        </div>
        <div class="form-group">
            <label>Kullanıcı Adı</label>
            <input asp-for="KullaniciAdi" class="form-control" />
        </div>
        <div class="form-group">
            <label>Şifre</label>
            <input asp-for="Sifre" class="form-control" type="password" />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Kayıt Ol</button>
    </form>
</div>
